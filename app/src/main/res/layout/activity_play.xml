<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_play"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/forest">

    <TextView
        android:id="@+id/countDown_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="30dp"
        android:textColor="@color/yellow"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/songshu_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/songshu"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/geluomi_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/geluomi"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/songshuNum_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:text="捕获嵩鼠0只"
        android:textSize="20dp"
        android:textColor="@color/yellow"/>

    <ImageView
        android:id="@+id/backpack_iv"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/backpack"/>

    <TextView
        android:id="@+id/increase_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+1"
        android:textColor="@color/black"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="45dp"
        android:layout_marginLeft="55dp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/musicIcon_iv"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:src="@drawable/music_on"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dp"/>
</RelativeLayout>
